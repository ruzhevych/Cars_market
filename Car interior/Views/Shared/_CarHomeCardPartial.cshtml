@model Cars

<div class="card mb-3 custom-card">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Name">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">
                    <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.Id" class="custom-title">@Model.Name</a>
                </h5>
                <p class="card-text">
                    @Model.Category?.Name<br />
                </p>
                <p>Price: <span class="badge bg-secondary">@Model.Price$</span></p>
                <p class="card-text">
                    <small class="text-body-secondary card-info">
                        <p><i class="fas fa-gas-pump"></i> Бензин, 2.99 л.</p>
                        <p><i class="fas fa-cog"></i> Автомат</p>
                    </small>
                </p>
                <a asp-controller="Cart" asp-action="Add" asp-route-id="@Model.Id" class="btn btn-outline-danger" asp-route-returnUrl="@Context.Request.Path"><i class="bi bi-heart-fill"></i> Like</a>
            </div>
        </div>
    </div>
</div>
@model List<CarsDto>

<h1>Archived Cars</h1>
<p>You can delete products permanently here.</p>

<table class="table">
    <thead>
        <tr class="table-dark">
            <th scope="col">#</th>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Category</th>
            <th scope="col">Status</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <th scope="row">@i.Id</th>
                <th class="text-center" scope="row">
                    <img height="50" src="@i.ImageUrl" alt="@i.Name" />
                </th>
                <td>
                    @i.Name
                </td>
                <td>
                    <span>@i.Price$</span>
                </td>
                <td>@i.CategoryName</td>
                <td>
                    @if (i.Quantity > 0)
                    {
                        <span class="badge bg-success">In Stock</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Out of Stock</span>
                    }
                </td>
                <td>
                    <a asp-controller="Products" asp-action="RestoreItem" asp-route-id="@i.Id" class="btn btn-outline-success">
                        <i class="bi bi-arrow-counterclockwise"></i>
                    </a>

                    <a asp-controller="Products" asp-action="Delete" asp-route-id="@i.Id" class="btn btn-outline-danger">
                        <i class="bi bi-trash-fill"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>Count: @Model.Count</p>

<div>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i>
        <span>Go Back</span>
    </a>
</div>
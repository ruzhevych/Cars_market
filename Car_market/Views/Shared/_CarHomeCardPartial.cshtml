@model Cars

<div class="col">
    <div class="card h-100">
        <img height="180" src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">
                @Model.Category?.Name<br />
                Left: @Model.Quantity
            </p>
            <button type="button" class="btn btn-primary">Add to Cart</button>
        </div>
        <div class="card-footer">
            <small class="text-muted">
                Price: <span class="badge bg-secondary">@Model.Price$</span>
            </small>
        </div>
    </div>
</div>